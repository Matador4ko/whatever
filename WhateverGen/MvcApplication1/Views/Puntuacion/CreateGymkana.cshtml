@model MvcApplication1.Models.Puntuacion

@{
    ViewBag.Title = "CreateGymkana";
}

<h2>CreateGymkana</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        <div class="editor-label">
            <h6>Nombre Gymkana</h6>
        </div>

        <legend>Puntuacion</legend>   
        <div class="editor-label">
            @Html.LabelFor(model => model.Puntos)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Puntos)
            @Html.ValidationMessageFor(model => model.Puntos)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.idGymkana)
            @Html.ValidationMessageFor(model => model.idGymkana)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la Gymkana", "Details", "Gymkana", new { id = Model.idGymkana }, "null")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
