@model MvcApplication1.Models.Puntuacion

@{
    ViewBag.Title = "CreateReto";
}

<h2>CreateReto</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        <div class="editor-label">
            <h6>Nombre Reto</h6>
        </div>

        <legend>Puntuacion</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Puntos)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Puntos)
            @Html.ValidationMessageFor(model => model.Puntos)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.idReto)
            @Html.ValidationMessageFor(model => model.idReto)
        </div>


        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al Reto", "Details", "Reto", new { id = Model.idReto }, "null")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
