@model MvcApplication1.Models.Reporte

@{
    ViewBag.Title = "CreateEvento";
}

<h2>CreateEvento</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Reporte</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Motivo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Motivo)
            @Html.ValidationMessageFor(model => model.Motivo)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.idEvento)
            @Html.ValidationMessageFor(model => model.idEvento)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al Evento", "Details", "Evento", new { id = Model.idEvento }, "null")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
