@model MvcApplication1.Models.Reporte

@{
    ViewBag.Title = "CreateReto";
}

<h2>CreateReto</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Reporte</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Motivo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Motivo)
            @Html.ValidationMessageFor(model => model.Motivo)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.idReto)
            @Html.ValidationMessageFor(model => model.idReto)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al Reto", "Details", "Reto", new { id = Model.idReto }, "null")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
